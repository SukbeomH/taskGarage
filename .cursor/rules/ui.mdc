    formatPrompt(message, defaultValue) {
        let prompt = `${chalk.blue('?')} ${chalk.white(message)}`;
        
        if (defaultValue !== null) {
            prompt += ` ${chalk.gray(`(${defaultValue})`)}`;
        }
        
        return prompt + ' ';
    }
    
    async showPrompt(prompt, timeout) {
